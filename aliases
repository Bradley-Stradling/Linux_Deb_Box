alias ll='ls -l'
alias la='ls -a'
alias l='ls -cf'

#clear screen and list contents uber quicks
alias clr="clear; pwd; ls"

# a quick way to get out of current directory ##
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

alias topper='cd /'

alias rtme='sudo su'

alias mount='mount | column -t'

alias path='echo -e ${PATH//:/\\n}'

alias now='date +"%T"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'
alias ports='sudo netstat -tulanp'

# reboot / halt / poweroff
alias reboot='sudo /sbin/reboot'
alias poweroff='sudo /sbin/poweroff'
alias halt='sudo /sbin/halt'
alias shutdown='sudo /sbin/shutdown'

# get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
 
# get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'
 
# Get server cpu info ##
alias cpuinfo='lscpu'

# Make a new script with name and template start
alias makescript='bash Make_Script.sh'

# Find file with 1 parameters script
alias findfile='find . -iname '

# move work from where it is to working directory
alias copynmove='bash Copy_Contents_Move.sh'

# change the path for go work
alias chgwork='bash Change_Work.sh'

# backsup all files in the current directory to a named directory
alias backmeup='bash Back_Me_Up.sh'

# set screen resolution
alias fixrez='xrandr --output Virtual1 --mode 1920x1080_60.00'

# goes to home directory
alias gohome='cd $HOME'

# gotest will go to my testing directory
alias gotest='cd ${test_Path}'

# gotest will go to my testing directory 1
alias gotest1='cd ${test_Path1}'

# gotest will go to my testing directory 2
alias gotest2='cd ${test_Path2}'

# gotest will go to my testing directory 3
alias gotest3='cd ${test_Path3}'

# gobackup will go to my back_up_files
alias gobackup='cd ${back_Up_Files_Path}'

# goscripts will go to my scripts directory
alias goscripts='cd ${scripts_Path}'

# gowork will go to the set path in work path file changed by change_work
alias gowork='cd ${work_Path}'
